<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      styleClass="main-container"
      stylesheets="@../css/style.css"
      spacing="20">

    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="System Reports" styleClass="main-header"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <ComboBox promptText="Select Report Type" styleClass="input-field" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String value="Financial Summary"/>
                    <String value="Customer Analytics"/>
                    <String value="Transaction Summary"/>
                    <String value="Performance Metrics"/>
                </FXCollections>
            </items>
        </ComboBox>
        <DatePicker promptText="Start Date" styleClass="input-field"/>
        <DatePicker promptText="End Date" styleClass="input-field"/>
        <Button text="Generate Report" styleClass="primary-button"/>
        <Button text="Export to PDF" styleClass="secondary-button"/>
    </HBox>

    <TableView styleClass="data-table" prefHeight="300">
        <columns>
            <TableColumn text="Metric" prefWidth="200"/>
            <TableColumn text="Value" prefWidth="150"/>
            <TableColumn text="Change" prefWidth="100"/>
            <TableColumn text="Trend" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="highlight-card" spacing="5" prefWidth="220">
            <Label text="Total Customers" styleClass="stat-label"/>
            <Label text="25" styleClass="stat-number"/>
            <Label text="+5% from last month" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
        </VBox>
        <VBox styleClass="info-card" spacing="5" prefWidth="220">
            <Label text="Total Assets" styleClass="stat-label"/>
            <Label text="$2.5M" styleClass="stat-number"/>
            <Label text="+12% from last month" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
        </VBox>
        <VBox styleClass="info-card" spacing="5" prefWidth="220">
            <Label text="Monthly Transactions" styleClass="stat-label"/>
            <Label text="1,247" styleClass="stat-number"/>
            <Label text="+8% from last month" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
        </VBox>
    </HBox>
</VBox>