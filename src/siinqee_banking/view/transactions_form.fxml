<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="siinqee_banking.controller.TransactionsController"
           stylesheets="@../css/style.css">
    <VBox alignment="CENTER" spacing="12" maxWidth="900" style="-fx-padding: 24;">
        <Label text="Transaction History" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill: #F4941C;" />
        <TableView fx:id="transactionsTable" prefHeight="500" prefWidth="800" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="200" />
                <TableColumn fx:id="amountColumn" text="Amount (Birr)" prefWidth="200" />
                <TableColumn fx:id="timestampColumn" text="Date/Time" prefWidth="400" />
            </columns>
        </TableView>
        <Button text="Close" onAction="#handleClose" styleClass="dashboard-btn" maxWidth="Infinity"/>
    </VBox>
</StackPane>
