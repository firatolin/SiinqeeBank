<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="siinqee_banking.controller.CustomerController"
            stylesheets="@../css/style.css">

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #2f4411;" prefWidth="200">
            <Label fx:id="welcomeLabel" text="Welcome"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Button text="Check Balance" onAction="#handleCheckBalance"
                    style="-fx-background-color: #F4941C; -fx-text-fill: white;"/>
            <Button text="Deposit Money" onAction="#handleDeposit"
                    style="-fx-background-color: #F4941C; -fx-text-fill: white;"/>
            <Button text="Withdraw Money" onAction="#handleWithdraw"
                    style="-fx-background-color: #F4941C; -fx-text-fill: white;"/>
            <Button text="View Transactions" onAction="#handleViewTransactions"
                    style="-fx-background-color: #F4941C; -fx-text-fill: white;"/>

            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;" alignment="CENTER">
            <Label text="Customer Dashboard"
                   style="-fx-text-fill: #F4941C; -fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Label text="Welcome to your banking dashboard"
                   style="-fx-text-fill: rgb(63, 86, 21); -fx-font-size: 16px;"/>

            <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #FFD700;">
                <Label text="Quick Balance" style="-fx-text-fill: rgb(63, 86, 21); -fx-font-weight: bold;"/>
                <Label text="$10,000.00" style="-fx-text-fill: #F4941C; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Quick Deposit" style="-fx-background-color: #FFD700; -fx-text-fill: rgb(63, 86, 21);"/>
                <Button text="Quick Transfer" style="-fx-background-color: #FFD700; -fx-text-fill: rgb(63, 86, 21);"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>