<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="siinqee_banking.controller.AdminController"
            stylesheets="@../css/style.css">

    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: rgb(63, 86, 21);">
            <HBox fx:id="headerBox" alignment="CENTER_LEFT" style="-fx-padding: 15;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="welcomeLabel" text="Welcome, Admin"
                           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2f4411; -fx-padding: 20;" prefWidth="250">
            <!-- Logo/Brand -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 0 0 20 0;">
                <Label text="ðŸ¦" style="-fx-font-size: 32px;"/>
                <Label text="SINQEE BANK" style="-fx-text-fill: #FFD700; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label text="Admin Panel" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="8">
                <Button fx:id="addCustomerBtn" text="ðŸ‘¥ Add Customer" onAction="#showAddCustomer"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-alignment: CENTER_LEFT; -fx-border-color: #F4941C; -fx-border-width: 0 0 0 3;"
                        maxWidth="Infinity"/>
                <Button fx:id="viewAccountsBtn" text="ðŸ“Š View All Accounts" onAction="#showViewAccounts"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-alignment: CENTER_LEFT; -fx-border-color: #F4941C; -fx-border-width: 0 0 0 3;"
                        maxWidth="Infinity"/>
                <Button fx:id="accountTransactionsBtn" text="ðŸ’³ Account Transactions" onAction="#showAccountTransactions"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-alignment: CENTER_LEFT; -fx-border-color: #F4941C; -fx-border-width: 0 0 0 3;"
                        maxWidth="Infinity"/>
                <Button fx:id="viewTransactionsBtn" text="ðŸ“‹ Transaction History" onAction="#showViewTransactions"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-alignment: CENTER_LEFT; -fx-border-color: #F4941C; -fx-border-width: 0 0 0 3;"
                        maxWidth="Infinity"/>
                <Button fx:id="systemReportsBtn" text="ðŸ“ˆ System Reports" onAction="#showSystemReports"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-alignment: CENTER_LEFT; -fx-border-color: #F4941C; -fx-border-width: 0 0 0 3;"
                        maxWidth="Infinity"/>
            </VBox>

            <!-- Stats Section -->
            <VBox spacing="10" style="-fx-padding: 20 0 0 0;">
                <Label text="Quick Stats" style="-fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                <HBox spacing="5">
                    <Label text="ðŸ‘¥" style="-fx-text-fill: white;"/>
                    <Label fx:id="customerCountLabel" text="Customers: 0" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="ðŸ’°" style="-fx-text-fill: white;"/>
                    <Label fx:id="totalBalanceLabel" text="Balance: 0K ETB" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area - Now dynamic -->
    <center>
        <StackPane fx:id="contentArea">
            <!-- Content will be dynamically loaded here -->
        </StackPane>
    </center>
</BorderPane>