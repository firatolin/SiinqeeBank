<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="siinqee_banking.controller.StaffController"
            stylesheets="@../css/style.css">

    <left>
        <VBox styleClass="side-panel" prefWidth="250" spacing="20">
            <padding><Insets top="20" right="15" bottom="20" left="15"/></padding>

            <!-- Header -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="SINQEE BANK" styleClass="main-header"/>
                <Label fx:id="welcomeLabel" text="Welcome, Staff" styleClass="welcome-label"/>
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="10">
                <Label text="STAFF PANEL" style="-fx-text-fill: #F4941C; -fx-font-weight: bold; -fx-font-size: 14px;"/>

                <Button text="ðŸ’° Quick Stats" styleClass="nav-button" disable="true"/>
                <Button text="ðŸ‘¥ Customer Operations" styleClass="nav-button" disable="true"/>
                <Button text="âž• Add Customer" styleClass="nav-button" disable="true"/>
                <Button text="ðŸ“Š View All Accounts" styleClass="nav-button" onAction="#handleViewCustomers"/>
                <Button text="ðŸ“‹ View Transactions" styleClass="nav-button" onAction="#handleViewTransactions"/>
            </VBox>

            <!-- Quick Stats -->
            <VBox styleClass="info-card" spacing="10">
                <Label text="Quick Stats" style="-fx-text-fill: rgb(63, 86, 21); -fx-font-weight: bold;"/>

                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="ðŸ‘¥" style="-fx-font-size: 16px;"/>
                    <VBox>
                        <Label fx:id="totalCustomersLabel" text="0" styleClass="stat-number"/>
                        <Label text="Customers" styleClass="stat-label"/>
                    </VBox>
                </HBox>

                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="ðŸ’°" style="-fx-font-size: 16px;"/>
                    <VBox>
                        <Label fx:id="totalBalanceLabel" text="ETB0.00" styleClass="stat-number"/>
                        <Label text="Total Balance" styleClass="stat-label"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Logout Button -->
            <Button text="ðŸšª Logout" onAction="#handleLogout" styleClass="logout-button" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: white; -fx-border-color: white;">
            <VBox spacing="25" style="-fx-padding: 30;" alignment="TOP_CENTER">

                <!-- Main Header -->
                <Label text="Staff Dashboard â€” Sinqe Bank" styleClass="sub-header"/>

                <!-- Customer Operations Card -->
                <VBox styleClass="content-pane" spacing="20">
                    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

                    <Label text="Customer Account Operations" style="-fx-font-size: 20px; -fx-text-fill: rgb(63, 86, 21); -fx-font-weight: bold; -fx-alignment: CENTER;"/>

                    <TextField fx:id="customerUsernameField" promptText="Enter Customer Username" styleClass="input-field" maxWidth="400"/>

                    <HBox spacing="20" alignment="CENTER">
                        <VBox spacing="10" alignment="CENTER" prefWidth="200">
                            <Label text="Deposit Funds" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <TextField fx:id="depositAmountField" promptText="Amount (ETB)" styleClass="input-field"/>
                            <Button text="âœ… Deposit" onAction="#handleDeposit" styleClass="success-button" maxWidth="Infinity"/>
                        </VBox>

                        <VBox spacing="10" alignment="CENTER" prefWidth="200">
                            <Label text="Withdraw Funds" style="-fx-text-follow: #e74c3c; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <TextField fx:id="withdrawAmountField" promptText="Amount (ETB)" styleClass="input-field"/>
                            <Button text="ðŸ’³ Withdraw" onAction="#handleWithdraw" styleClass="danger-button" maxWidth="Infinity"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Add New Customer Card -->
                <VBox styleClass="content-pane" spacing="15">
                    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

                    <Label text="Add New Customer" style="-fx-font-size: 20px; -fx-text-fill: rgb(63, 86, 21); -fx-font-weight: bold; -fx-alignment: CENTER;"/>

                    <GridPane hgap="15" vgap="15" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>

                        <rowConstraints>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                        </rowConstraints>

                        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="info-label"/>
                        <TextField fx:id="newCustomerUsernameField" promptText="Enter username" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="info-label"/>
                        <TextField fx:id="newCustomerPasswordField" promptText="Enter password" styleClass="input-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Initial Balance:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="info-label"/>
                        <TextField fx:id="initialBalanceField" promptText="ETB 0.00" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Button text="âž• Add New Customer" onAction="#handleAddCustomer" styleClass="primary-button" maxWidth="200"/>
                </VBox>

                <!-- Quick Actions -->
                <HBox spacing="20" alignment="CENTER">
                    <Button text="ðŸ‘¥ View All Customers" onAction="#handleViewCustomers" styleClass="secondary-button" prefWidth="200"/>
                    <Button text="ðŸ“‹ View Transactions" onAction="#handleViewTransactions" styleClass="secondary-button" prefWidth="200"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>