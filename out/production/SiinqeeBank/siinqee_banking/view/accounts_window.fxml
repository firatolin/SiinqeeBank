<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      styleClass="main-container"
      stylesheets="@../css/style.css"
      spacing="20">

    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="All Customer Accounts" styleClass="main-header"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField promptText="Search accounts..." styleClass="input-field" prefWidth="300"/>
        <Button text="Search" styleClass="primary-button"/>
        <Button text="Refresh" styleClass="secondary-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Total Accounts:" styleClass="info-label"/>
        <Label text="25" styleClass="stat-number"/>
    </HBox>

    <TableView styleClass="data-table" prefHeight="400">
        <columns>
            <TableColumn text="Account ID" prefWidth="120"/>
            <TableColumn text="Username" prefWidth="150"/>
            <TableColumn text="Full Name" prefWidth="200"/>
            <TableColumn text="Email" prefWidth="250"/>
            <TableColumn text="Balance" prefWidth="120"/>
            <TableColumn text="Status" prefWidth="100"/>
            <TableColumn text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="info-card" spacing="5" prefWidth="200">
            <Label text="Total Balance" styleClass="stat-label"/>
            <Label text="$250,000.00" styleClass="stat-number"/>
        </VBox>
        <VBox styleClass="info-card" spacing="5" prefWidth="200">
            <Label text="Active Accounts" styleClass="stat-label"/>
            <Label text="24" styleClass="stat-number"/>
        </VBox>
        <VBox styleClass="info-card" spacing="5" prefWidth="200">
            <Label text="Inactive Accounts" styleClass="stat-label"/>
            <Label text="1" styleClass="stat-number"/>
        </VBox>
    </HBox>
</VBox>