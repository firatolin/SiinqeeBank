<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="siinqee_banking.controller.BalanceController"
           stylesheets="@../css/style.css">
    <VBox alignment="CENTER" spacing="12" maxWidth="600" style="-fx-padding: 40;">
        <Label text="Your Balance" style="-fx-font-size: 20px; -fx-font-weight:bold; -fx-text-fill: white;" />
        <Label fx:id="balanceLabel" style="-fx-font-size: 28px; -fx-font-weight:bold; -fx-text-fill: #F4941C;" />
        <Button text="Close" onAction="#handleClose" styleClass="dashboard-btn" maxWidth="Infinity"/>
    </VBox>
</StackPane>
