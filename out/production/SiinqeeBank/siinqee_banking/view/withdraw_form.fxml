<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="siinqee_banking.controller.WithdrawController"
           stylesheets="@../css/style.css">
    <VBox alignment="CENTER" spacing="12" maxWidth="600" style="-fx-padding: 40;">
        <Label text="Withdraw Money" style="-fx-font-size: 20px; -fx-font-weight:bold; -fx-text-fill: white;"/>
        <TextField fx:id="amountField" promptText="Enter amount" maxWidth="Infinity"/>
        <Button text="Withdraw" onAction="#handleWithdraw" styleClass="dashboard-btn" maxWidth="Infinity"/>
    </VBox>
</StackPane>
